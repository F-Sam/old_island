<view class="container" bind:tap="handleTargetDetail">
  <image src="{{ book.image }}"></image>
  <view class="description">
    <text class="title">{{ book.title }}</text>
    <text class="title">{{ book.author }}</text>
    <view class="foot" wx:if="{{ showLike }}">
      <text class="num">{{ book.fav_nums }}</text>
      <text class="footer">喜欢</text>
    </view>
  </view>
</view>
