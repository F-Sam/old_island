.container {
  display: flex;
  flex-direction: column;
}
.detail-image {
  width: 100%;
  height: 460rpx;
}
.detail-message {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.detail-message .avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.detail-message text {
  vertical-align: middle;
}
.detail-message .titleName {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}
.detail-message .titleMessage {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}
.detail-message .titleTime {
  font-size: 26rpx;
  margin-left: 20rpx;
  color: #888;
}
.detail-title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.users-set {
  margin-top: 20rpx;
}
.users-set .users-image {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.users-set .users-image image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
}
.users-set .users-image .share {
  margin-left: 30rpx;
}
.users-set .lineThrough {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.detail-content {
  font-size: 24rpx;
  color: #666;
  margin: 20rpx 40rpx 60rpx;
  line-height: 40rpx;
  letter-spacing: 2px;
}
.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
